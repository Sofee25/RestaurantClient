<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.RestaurantClient.Admin" parent="Theme.RestaurantClient">
        <item name="colorPrimary">@color/admin_primary</item>
        <item name="colorPrimaryVariant">@color/admin_primary_dark</item>
        <item name="colorSecondary">@color/admin_secondary</item>
        <item name="android:statusBarColor">@color/admin_primary_dark</item>
        <item name="android:navigationBarColor">@color/admin_primary</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="toolbarStyle">@style/Widget.RestaurantClient.AdminToolbar</item>
        <item name="android:textColorPrimary">@color/admin_text_primary</item>
    </style>

    <style name="Widget.RestaurantClient.AdminToolbar" parent="@style/Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/admin_primary</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="subtitleTextColor">@android:color/white</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="Widget.RestaurantClient.AdminBadge" parent="@style/Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/admin_primary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="chipCornerRadius">12dp</item>
    </style>
</resources>
